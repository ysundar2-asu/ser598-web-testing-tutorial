        {
          "name": "GET Limited Products",
          "request": {
            "method": "GET",
            "url": "https://fakestoreapi.com/products?limit=5"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
