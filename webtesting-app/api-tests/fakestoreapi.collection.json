      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "POST Login - Valid Credentials",
          "request": {
            "method": "POST",
            "url": "https://fakestoreapi.com/auth/login",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"username\": \"johnd\", \"password\": \"m38rmF$\"}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Response contains token', function () {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data).to.have.property('token');",
                  "    pm.expect(data.token).to.be.a('string');",
                  "});",
                  "",
                  "pm.test('Token is not empty', function () {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data.token.length).to.be.above(0);",
                  "});",
                  "",
                  "pm.test('Save token to environment', function () {",
                  "    const data = pm.response.json();",
                  "    pm.environment.set('authToken', data.token);",
                  "});",
                  "",
                  "pm.test('Response time is acceptable', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(3000);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    }
  ]
